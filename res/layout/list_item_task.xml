<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_checkbox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_item_name"
        android:text="nazwa"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/task_item_padding"
        android:layout_margin="@dimen/task_margin"
        android:textColor="@color/light_green"
        style="@style/GreenTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_item_date"
        android:text="data"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/task_item_padding"
        android:layout_margin="@dimen/task_margin"
        style="@style/DarkGreenTextView"/>

    <ImageView
        android:id="@+id/miniature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_house"
        android:layout_gravity="center"/>

</LinearLayout>